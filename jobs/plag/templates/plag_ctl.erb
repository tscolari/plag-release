#!/bin/bash

RUN_DIR=/var/vcap/sys/run/plag
PID_FILE=$RUN_DIR/plag.pid
mkdir -p $RUN_DIR

case $1 in

  start)
    echo $$ > $PIDFILE
    exec chpst -u vcap:vcap /var/vcap/jobs/plag/bin/plag
    ;;
  stop)
    kill -9 $PIDFILE
    ;;
  restart)
    kill -9 $PIDFILE
    echo $$ > $PIDFILE
    exec chpst -u vcap:vcap /var/vcap/jobs/plag/bin/plag
    ;;
esac
